{
  "name": "measurexr",
  "version": "1.0.0",
  "description": "With Measure XR, you can measure spaces and objects around you using WebXR.",
  "scripts": {
    "format": "prettier --log-level=warn --write ./src/**/*.{js,css,html}",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/japanim/jap-collection-client.git"
  },
  "dependencies": {
    "prettier": "^3.4.2"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  }
}
